{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "core/**/*",
    "types/**/*",
    "utils/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 